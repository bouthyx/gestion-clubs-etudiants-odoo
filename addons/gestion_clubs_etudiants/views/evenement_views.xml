<odoo>
    <record id="view_evenement_tree" model="ir.ui.view">
        <field name="name">evenement.tree</field>
        <field name="model">gestion.evenement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="club_id"/>
                <field name="lieu"/>
            </tree>
        </field>
    </record>

    <record id="view_evenement_form" model="ir.ui.view">
        <field name="name">evenement.form</field>
        <field name="model">gestion.evenement</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="club_id"/>
                        <field name="date"/>
                        <field name="lieu"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
